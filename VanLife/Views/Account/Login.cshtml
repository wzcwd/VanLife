@model VanLife.Models.ViewModel.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: url('@Url.Content("~/images/background.jpg")') no-repeat center center fixed;
        background-size: cover;
    }

    .form-signin {
        background: rgba(255, 255, 255, 0.7);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(5px);
        max-width: 500px;
        margin: 15px auto;
    }
</style>

<div class="form-signin">
    <form asp-action="Login" method="post" asp-route-returnUrl="@Model.ReturnUrl">
     
        <div asp-validation-summary="All" class="text-danger"></div>
        <h1 class="h3 mb-3 fw-normal">Please Log in</h1>

        <div class="form-floating mb-1">
            <input asp-for="Username" class="form-control" placeholder="username"/>
            <label asp-for="Username" class="control-label">Username</label>
        </div>

        <div class="form-floating">
            <input asp-for="Password" class="form-control" placeholder="password"/>
            <label asp-for="Password" class="control-label">password</label>
        </div>

        <div class="checkbox mb-3 mt-1">
            <input asp-for="RememberMe" class="form-check-input"/>
            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-primary">Login</button>

        <div class="d-flex align-items-center my-1">
            <hr class="flex-grow-1" /> <span class="mx-2 text-muted">or</span> <hr class="flex-grow-1" />
        </div>

        <a class="btn btn-light w-100 mb-2 border rounded-pill d-flex align-items-center justify-content-center"
           asp-action="ExternalLogin" asp-controller="Account" asp-route-provider="Google">
            <img src="@Url.Content("~/images/google-logo.svg")" alt="Google login" class="img-fluid me-2" style="max-width: 23px;" />
            Continue with Google
        </a>
        <a class="btn btn-light w-100 mb-2 border rounded-pill d-flex align-items-center justify-content-center"
           asp-action="ExternalLogin" asp-controller="Account" asp-route-provider="Facebook">
            <img src="@Url.Content("~/images/facebook-logo.svg")" alt="Facebook login" class="img-fluid me-2" style="max-width: 23px;" />
            Continue with Facebook
        </a>

        <p class="mt-3 text-center">Don't have an account?
            <a asp-action="Register" asp-controller="Account">Register here</a>
        </p>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}